docker exec clab-network-Server6-mail-DMZ sh -c 'echo "nameserver 1.1.1.1
nameserver 8.8.8.8" > /etc/resolv.conf'
docker exec clab-network-Server6-mail-DMZ apt-get update -y
docker exec clab-network-Server6-mail-DMZ apt-get install {{ basic_packages }}
docker exec clab-network-Server6-mail-DMZ bash -c 'debconf-set-selections <<< "postfix postfix/mailname string Server6-mail-DMZ.DMZsite.dev"'
docker exec clab-network-Server6-mail-DMZ bash -c 'debconf-set-selections <<< "postfix postfix/main_mailer_type select  Internet Site"'
docker exec clab-network-Server6-mail-DMZ bash -c 'debconf-set-selections <<< "postfix postfix/protocols   select  ipv4"'
docker exec clab-network-Server6-mail-DMZ bash -c 'debconf-set-selections <<< "postfix postfix/destinations    string  $myhostname, Server6-mail-DMZ.DMZsite.dev, DMZsite.dev, localhost.DMZsite.dev, localhost, mail.DMZsite.dev"'
docker exec clab-network-Server6-mail-DMZ bash -c 'debconf-set-selections <<< "postfix postfix/protocols   select  ipv4"'
docker exec clab-network-Server6-mail-DMZ bash -c 'debconf-set-selections <<< "postfix postfix/mynetworks  string  127.0.0.0/8 [::ffff:127.0.0.0]/104 [::1]/128 172.16.0.0/24 192.168.0.0/16"'
docker exec clab-network-Server6-mail-DMZ bash -c 'DEBIAN_FRONTEND=noninteractive apt-get install --assume-yes postfix -y'

docker exec -d clab-network-Server6-mail-DMZ ip addr add 172.16.0.7/24 dev eth1
docker exec -d clab-network-Server6-mail-DMZ ip route delete default
docker exec -d clab-network-Server6-mail-DMZ ip route add 0.0.0.0/0 via 172.16.0.1 dev eth1


docker exec clab-network-Server6-mail-DMZ bash -c 'echo "
submission inet n       -       -       -       -       smtpd
  -o syslog_name=postfix/submission
  -o smtpd_tls_wrappermode=no
  -o smtpd_tls_security_level=encrypt
  -o smtpd_sasl_auth_enable=yes
  -o smtpd_recipient_restrictions=permit_mynetworks,permit_sasl_authenticated,reject
  -o milter_macro_daemon_name=ORIGINATING
  -o smtpd_sasl_type=dovecot
  -o smtpd_sasl_path=private/auth" >> /etc/postfix/master.cf'

docker exec clab-network-Server6-mail-DMZ bash -c 'openssl rand -base64 48 > passphrase.txt'
docker exec clab-network-Server6-mail-DMZ bash -c 'openssl genrsa -aes128 -passout file:passphrase.txt -out server.key 2048'
docker exec clab-network-Server6-mail-DMZ bash -c 'openssl req -new -passin file:passphrase.txt -key server.key -out server.csr -subj "/C=NL/O=krkr/OU=Domain Control Validated/CN=*.DMZsite.dev"'
docker exec clab-network-Server6-mail-DMZ bash -c 'cp server.key server.key.org'
docker exec clab-network-Server6-mail-DMZ bash -c 'openssl rsa -in server.key.org -passin file:passphrase.txt -out server.key'
docker exec clab-network-Server6-mail-DMZ bash -c 'openssl x509 -req -days 36500 -in server.csr -signkey server.key -out server.crt'
docker exec clab-network-Server6-mail-DMZ bash -c 'mv server.crt /etc/ssl.crt'
docker exec clab-network-Server6-mail-DMZ bash -c 'mv server.key /etc/ssl.key'

docker exec clab-network-Server6-mail-DMZ bash -c 'sed -i '26,33d' /etc/postfix/main.cf'

docker exec clab-network-Server6-mail-DMZ bash -c '
echo "smtpd_tls_cert_file=/etc/ssl.crt
smtpd_tls_key_file=/etc/ssl.key
smtpd_use_tls=yes
smtpd_tls_session_cache_database = btree:${data_directory}/smtpd_scache
smtp_tls_session_cache_database = btree:${data_directory}/smtp_scache
smtpd_tls_security_level=may
smtpd_tls_protocols = !SSLv2, !SSLv3" >> /etc/postfix/main.cf'



docker exec clab-network-Server6-mail-DMZ bash -c 'useradd john -m'
docker exec clab-network-Server6-mail-DMZ bash -c '(echo "john"; sleep 1; echo "john";) | passwd john'
docker exec clab-network-Server6-mail-DMZ bash -c 'mkdir /home/john/Maildir'
docker exec clab-network-Server6-mail-DMZ bash -c 'chown john:john /home/john/Maildir'
docker exec clab-network-Server6-mail-DMZ bash -c 'chmod -R 700 /home/john/Maildir'

docker exec clab-network-Server6-mail-DMZ apt install dovecot-core dovecot-pop3d dovecot-common dovecot-imapd -y

docker exec clab-network-Server6-mail-DMZ bash -c 'echo "disable_plaintext_auth = no
mail_privileged_group = mail
userdb {
  driver = passwd
}
passdb {
  args = %s
  driver = pam
}
protocols = " imap"
listen = *, ::
service auth {
  unix_listener /var/spool/postfix/private/auth {
    group = postfix
    mode = 0660
    user = postfix
  }
}
ssl=required
ssl_cert = </etc/ssl.crt
ssl_key = </etc/ssl.key" > /etc/dovecot/dovecot.conf'

docker exec clab-network-Server6-mail-DMZ bash -c "sed -i 's/mail_location = mbox:~\/mail:INBOX=\/var\/mail\/%u/mail_location = maildir:~\/Maildir/' /etc/dovecot/conf.d/10-mail.conf"


docker exec -d clab-network-Server6-mail-DMZ sh -c 'echo "nameserver 172.16.0.5" > /etc/resolv.conf'


docker exec clab-network-Server6-mail-DMZ bash -c 'postconf -e "home_mailbox= Maildir/"'
docker exec clab-network-Server6-mail-DMZ bash -c 'postconf -e "virtual_alias_maps= hash:/etc/postfix/virtual"'
docker exec clab-network-Server6-mail-DMZ bash -c 'echo "john@Server6-mail-DMZ john
john@mail.DMZsite.dev john
john@DMZsite.dev john" > /etc/postfix/virtual'

docker exec clab-network-Server6-mail-DMZ bash -c 'postmap /etc/postfix/virtual'
docker exec clab-network-Server6-mail-DMZ bash -c 'echo "export MAIL=~/Maildir" | tee -a /etc/bash.bashrc | tee -a /etc/profile.d/mail.sh'
docker exec clab-network-Server6-mail-DMZ bash -c 'source /etc/profile.d/mail.sh'
docker exec clab-network-Server6-mail-DMZ bash -c 'newaliases'
docker exec clab-network-Server6-mail-DMZ bash -c 'postfix start'
docker exec clab-network-Server6-mail-DMZ bash -c 'dovecot'
 

