#!/bin/sh

croncmd="bash /WANweb.sh"
cronjob="0 9 * * 1-5 $croncmd"

killcronjob="0 17 * * 1-5 $killcroncmd"
killcroncmd="crontab -r"

{% for k in range(1, NumberofWANwebclients | int +1) %}
docker exec -d clab-{{networkname}}-Client{{k}}-WANweb ( crontab -l | grep -v -F "$croncmd" ; echo "$cronjob" ) | crontab -
docker exec -d clab-{{networkname}}-Client{{k}}-WANweb ( crontab -l | grep -v -F "$killcroncmd" ; echo "$killcronjob" ) | crontab -
{% endfor %}
