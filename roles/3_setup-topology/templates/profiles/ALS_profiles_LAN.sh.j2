#!/bin/bash

{% set LANdevs = (NumberofLANclients | int *DevsPercentage | int *0.01)|int %}
{% set LANadmins = (NumberofLANclients | int *AdminPercentage | int *0.01)|int %}
{% set LANops = (NumberofLANclients | int *OpsPercentage | int *0.01)|int %}



# Functions to run Cronjobs on Departments - Assign distribution 0-1
# These Cronjobs run the actual traffic generation scripts as defined in Cronjobs.sh.j2
developers () {
   dep="developers"
   web=0.5
   smb=0.5
   ssh=0.2

   # Run Cronjob and pass assigned weights
   {% for i in range(1, LANdevs | int +1) %}
   docker exec -d clab-{{networkname}}-Client{{i}}-DEVS-LAN chmod +x /Cronjobs.sh
   docker exec -d clab-{{networkname}}-Client{{i}}-DEVS-LAN bash /Cronjobs.sh $dep $web $smb $ssh
   {% endfor %}
}

admins () {
   dep="administration"
   web=0.7
   smb=0.3
   ssh=0.2

   {% for i in range(1, LANadmins | int +1) %}
   docker exec -d clab-{{networkname}}-Client{{i}}-ADMINS-LAN chmod +x /Cronjobs.sh
   docker exec -d clab-{{networkname}}-Client{{i}}-ADMINS-LAN bash /Cronjobs.sh $dep $web $smb $ssh
   {% endfor %}
}

operations () {
   dep="operations"
   web=0.6
   smb=0.4
   ssh=0.2

   {% for i in range(1, LANops | int +1) %}
   docker exec -d clab-{{networkname}}-Client{{i}}-OPS-LAN chmod +x /Cronjobs.sh
   docker exec -d clab-{{networkname}}-Client{{i}}-OPS-LAN bash /Cronjobs.sh $dep $web $smb $ssh
   {% endfor %}
}

# Running Department Cronjobs
operations
developers
admins
